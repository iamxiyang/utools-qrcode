{
  "main": "index.html",
  "logo": "logo.png",
  "development": {
    "main": "http://127.0.0.1:5173/index.html",
    "preload": "preload.js"
  },
  "preload": "preload.js",
  "pluginSetting": {
    "single": false
  },
  "features": [
    {
      "code": "qrcode",
      "explain": "生成二维码图片、识别图片中二维码",
      "cmds": [
        "QRCode",
        "二维码",
        "扫码",
        "截图识别二维码",
        {
          "type": "regex",
          "match": "/^https?:\\/\\/(?:(?:(?:25[0-5]|2[0-4]\\d|1\\d\\d|[1-9]\\d|\\d)(?:\\.(?:25[0-5]|2[0-4]\\d|1\\d\\d|[1-9]\\d|\\d)){3})|(?:(?:[a-z\\u00a1-\\uffff0-9]-*)*[a-z\\u00a1-\\uffff0-9]+)(?:\\.(?:[a-z\\u00a1-\\uffff0-9]-*)*[a-z\\u00a1-\\uffff0-9]+)*(?:\\.(?:[a-z\\u00a1-\\uffff]{2,}))\\.?)(?::\\d{2,5})?(?:[/?#][^\\s\"]*)?$/i",
          "label": "生成二维码"
        },
        {
          "type": "img",
          "label": "识别图片中二维码"
        },
        {
          "type": "files",
          "fileType": "file",
          "match": "/\\.(png|jpeg|jpg|bmp)$/i",
          "label": "二维码解析",
          "minLength": 1,
          "maxLength": 1
        },
        {
          "type": "window",
          "platform": ["win32", "darwin"],
          "match": {
            "app": [
              "chrome.exe",
              "firefox.exe",
              "MicrosoftEdge.exe",
              "iexplore.exe",
              "opera.exe",
              "brave.exe",
              "msedge.exe",
              "Google Chrome.app",
              "Safari.app",
              "Opera.app",
              "Vivaldi.app",
              "Brave Browser.app",
              "Microsoft Edge.app"
            ]
          },
          "label": "当前网页地址二维码"
        }
      ]
    }
  ]
}
